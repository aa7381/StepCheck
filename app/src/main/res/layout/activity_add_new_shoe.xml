<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Shoe"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp"/>

        <!-- Scan QR Code button -->
        <Button
            android:id="@+id/btnScanQR"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Scan QR Code"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000"
            android:layout_marginTop="12dp"/>

        <!-- Upload Image button -->
        <Button
            android:id="@+id/btnUploadImage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Upload Image"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000"
            android:layout_marginTop="12dp"/>

        <!-- Shoe Name input -->
        <EditText
            android:id="@+id/etShoeName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Shoe Name"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <!-- Shoe Type input -->
        <EditText
            android:id="@+id/etShoeType"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="סוג נעל (רחבה, צרה)"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <!-- Price input -->
        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Price"
            android:inputType="numberDecimal"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <!-- Size type spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="סוגי מידות"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="16dp"/>

        <Spinner
            android:id="@+id/spinnerSizeType"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"/>

        <!-- Quantity per size -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="המידות לנעל / Quantity per Size"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="16dp"/>

        <Spinner
            android:id="@+id/spinnerQuantitySize"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"/>

        <!-- Quantity input for selected size -->
        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Quantity"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <!-- Save button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Save"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"/>

        <!-- Horizontal layout for save shoe and back -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnSaveShoe"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="Save Shoe"
                android:backgroundTint="#000000"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="Back"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
